<div class="margin-top">
  <%= simple_form_for @product do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <h1 id="h1-new-project">Post your Product</h1>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :categories, collection: ["T-shirt" ,"Jeans" ,"Jacket" ,"Other"] %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, required: true %>
    </div>

    <div class="form-actions my-button">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
